<header>
	<div class="row">
		<ul class="header-menu">
			<li><a href="#" data-section="home">Home</a></li>
			<li><a href="#" data-section="about-us">About Us</a></li>
			<li><a href="#" data-section="clients">Clients</a></li>
			<li><a href="#" data-section="contact">Contact</a></li>
			<li class="contact-info"><a href="mailto:contact@meetqualia.com">contact@meetqualia.com</a></li>
		</ul>
	</div>
</header>

<section class="main-section" id="home">
	<div class="title-bar">
		<div class="title">Qualia | Studios</div>
	</div>
</section>

<section class="team-section section black" id="about-us">
	<div class="team-section-title section-title white">
		Who are we?
	</div>
	<div class="team-description">
		We are a group of passionate developers and data scientists committed to bringing your ideas to life. We work across technologies and platforms - from Rails to Clojure to R, and everything in between.
	</div>
	<div class="photo-container">
		<% @team_members.each do |member| %>
			<div class="photo-port" title="" data-name="<%= member[:name] %>" data-desc="<%= member[:desc] %>">
				<a href="<%= member[:url] %>"><img class="photo" src="<%= asset_path(member[:image]) %>"></a>
			</div>
		<% end %>
	</div>
</section>

<section class="client-section section" id="clients">
	<div class="client-section-title section-title black">
		Select Clients
	</div>
	<div class="clients-container">
		<a href="http://www.tribecafilm.com"><img class="client-link tribeca" src="<%= asset_path('tribeca.png')%>" alt="Tribeca Film Festival"></a>
		<a href="http://www.stanford.edu"><img class="client-link stanford" src="<%= asset_path('stanford-logo.png')%>" alt="Stanford"></a>
		<a href="http://www.eatdrinkjobs.com"><img class="client-link edj" src="<%= asset_path('eatdrinkjobs.png')%>" alt="Eat Drink Jobs"></a>
		<a href="http://www.globalworks.com"><img class="client-link global-works" src="<%= asset_path('globalworks.png')%>" alt="Global Works"></a>
		<a href="http://www.conviro.com"><img class="client-link conviro" src="<%= asset_path('conviro.png')%>" alt="Conviro"></a>
		<a href="http://www.codecademy.com"><img class="client-link codecademy" src="<%= asset_path('codecademy.png')%>" alt="Codecademy"></a>
		
		
	</div>
</section>

<section class="contact-section section black" id="contact">
	<div class="contact-section-title section-title white">
		Contact Us
	</div>

	<div class="contact-form-wrapper">
		<%= simple_form_for @contact_form, remote: true do |f| %>
			<%= f.input :name, label: "Your name" %>
			<%= f.input :email, label: "Your email" %>
			<%= f.label :message, "Your message" %>
			<%= f.text_area :message %>
			<%= f.button :submit, "Send message" %>
		<% end %>

		<div class="success-msg">Thanks for the message! We'll get back to you right away.</div>
	</div>
</section>
