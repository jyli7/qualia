html {
	height: 100%;
}

body {
	margin: 0px;
	height: 100%;
}

section {
	border-bottom: 1px solid gray;
}

header {
	position: absolute;
	z-index: 1;
	top: 0;
	left: 0;
	right: 0;
	height: 58px;
	background: #18181C;
	opacity: 0.8;
}

.contact-info {
	float: right;
}

.row {
	padding-top: 0;
	padding-bottom: 0;
	height: 58px;
	position: relative;
	width: 100%;
	max-width: 1140px;
	margin: 0 auto;
	overflow: hidden;
	padding-left: 2em;
	padding-right: 2em;
}

.header-menu {
	padding: 0;
	margin: 0;
	top: 0;
	bottom: 0;
	height: 100%;

	li {
		height: 100%;
		display: inline-block;
		padding-right: .2em;
		list-style: none;
		padding: 0;
		margin: 0;
		color: white;
	}

	a {
		display: inline-block;
		padding: 0.9em 2em 0 0;
		height: 100%;
		font-weight: 200;
		font-size: 18px;
		color: white;
		font-family: "Lato", sans-serif;
		text-decoration: none;
	}
}

.main-section {
	height: 800px;
	position: relative;
	width: 100%;
	height: 100%;
	background: url(<%= asset_path "bk-bridge-low.jpg" %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.title-bar {
	margin-top: -50px;
	height: 150px;
	width: 100%;
	z-index: 1;
	opacity: 0.6;
	position: absolute;
	background-color: #FEFEFE;
	top: 37%;
}

.section {
	padding: 130px 0 140px 0;
	&.black {
		background-color: #18181C;
	}

	&.white {
		background-color: #ffffff;
	}
}

.title {
	font-family: 'Cinzel', serif;
	text-align: center;
	position: relative;
	top: 19px;
	left: 5px;
	font-size: 90px;
	font-variant: small-caps;
}

.section-title {
	margin: 0px auto;
	font-size: 45px;
	width: 456px;
	font-family: 'Raleway', serif;
	font-weight: 200;
	letter-spacing: 11px;
	padding: 0 0 45px 0;

	&.white {
		color: white;
	}

	&.black {
		color: black;
	}
}

.team-description {
	font-family: 'Josefin Sans', serif;
	font-weight: 100;
	font-size: 20px;
	margin: 0px auto;
	color: white;
	width: 750px;
	text-align: center;
	letter-spacing: 2px;
	padding: 10px 0 15px 0;
	line-height: 1.6em;
}

.photo-port {
	padding: 2px;
	width: 120px;
	height: 120px;
	border: 2px solid #f0f0f0;
	border-radius: 100px;
	display: inline-block;
	margin-right: 55px;
	&:last-child {
		margin-right: 0px
	}
}

.photo-container {
	width: 876px;
	margin: 0px auto;
	margin-top: 50px;
}

.photo {
	width: 120px;
	height: 120px;
	border-radius: 64px;
}

.clients-container {
	width: 700px;
	margin: 0px auto;
	margin-top: 20px;
}

.client-link {
	width: 170px;
	margin-right: 70px;
	&:nth-child(3n) {
		margin-right: 0px
	}
}