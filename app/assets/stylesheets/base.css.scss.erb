html {
	height: 100%;
}

body {
	margin: 0px;
	height: 100%;
}

section {
	border-bottom: 1px solid gray;
}

.main-section {
	height: 800px;
	position: relative;
	width: 100%;
	height: 100%;
	background: url(<%= asset_path "bk-bridge-low.jpg" %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.title-bar {
	margin-top: -50px;
	height: 150px;
	width: 100%;
	z-index: 1;
	opacity: 0.6;
	position: absolute;
	background-color: #FEFEFE;
	top: 37%;
}

.section {
	&.black {
		background-color: #18181C;
	}

	&.white {
		background-color: #ffffff;
	}
}

.title {
	font-family: 'Cinzel', serif;
	text-align: center;
	position: relative;
	top: 19px;
	left: 5px;
	font-size: 90px;
	font-variant: small-caps;
}

.section-title {
	margin: 0px auto;
	font-size: 45px;
	width: 456px;
	font-family: 'Raleway', serif;
	font-weight: 200;
	letter-spacing: 11px;
	padding: 75px 0px 35px 0;

	&.white {
		color: white;
	}

	&.black {
		color: black;
	}
}

.team-description {
	font-family: 'Josefin Sans', serif;
	font-weight: 100;
	font-size: 20px;
	margin: 0px auto;
	color: white;
	width: 750px;
	text-align: center;
	letter-spacing: 2px;
	padding: 10px 0 15px 0;
	line-height: 1.6em;
}

.photo-port {
	padding: 2px;
	width: 120px;
	height: 120px;
	border: 2px solid #f0f0f0;
	border-radius: 100px;
	display: inline-block;
	margin-right: 55px;
	&:last-child {
		margin-right: 0px
	}
}

.photo-container {
	width: 876px;
	margin: 0px auto;
	margin-top: 50px;
	margin-bottom: 90px;
}

.photo {
	width: 120px;
	height: 120px;
	border-radius: 64px;
}

.clients-container {
	width: 700px;
	margin: 0px auto;
	margin-top: 20px;
}

.client-link {
	width: 170px;
	margin-right: 70px;
	&:nth-child(3n) {
		margin-right: 0px
	}
}